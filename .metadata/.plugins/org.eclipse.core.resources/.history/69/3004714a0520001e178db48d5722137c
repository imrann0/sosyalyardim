import jakarta.persistence.Entity;
import jakarta.persistence.GeneratedValue;
import jakarta.persistence.GenerationType;
import jakarta.persistence.Id;
import jakarta.persistence.ManyToMany;
import java.util.HashSet;
import java.util.Set;

@Entity
public class Rol {
    @Id
    @GeneratedValue(strategy = GenerationType.IDENTITY)
    private int id;

    private String rolName;

    @ManyToMany(mappedBy = "roller")
    private Set<Personel> personeller = new HashSet<>();

    // Getter ve Setter metotlarÄ±

    public int getId() {
        return id;
    }

    public void setId(int id) {
        this.id = id;
    }

    public String getRolName() {
        return rolName;
    }

    public void setRolName(String rolName) {
        this.rolName = rolName;
    }

    public Set<Personel> getPersoneller() {
        return personeller;
    }

    public void setPersoneller(Set<Personel> personeller) {
        this.personeller = personeller;
    }

    public void addPersonel(Personel personel) {
        personeller.add(personel);
        personel.getRoller().add(this);
    }

    public void removePersonel(Personel personel) {
        personeller.remove(personel);
        personel.getRoller().remove(this);
    }
}
