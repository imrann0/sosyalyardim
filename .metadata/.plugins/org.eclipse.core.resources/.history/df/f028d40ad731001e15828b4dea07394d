package com.example.example.Islemler;
import com.example.example.DataBase.IDInfo;

import jakarta.servlet.ServletException;
import jakarta.servlet.annotation.WebServlet;
import jakarta.servlet.http.HttpServlet;
import jakarta.servlet.http.HttpServletRequest;
import jakarta.servlet.http.HttpServletResponse;
import java.io.IOException;
import java.util.List;
import com.google.gson.Gson;


@WebServlet(name = "SearchServlet", value = "/adminpanel/SearchServlet")
public class SearchServlet extends HttpServlet {
    protected void doGet(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
        String tckimlik = request.getParameter("tckimlik");
        String ad = request.getParameter("ad");
        String soyad = request.getParameter("soyad");

        List<IDInfo> results = IDInfo.getByIdNoAndNames(tckimlik, ad, soyad);
        for (IDInfo result : results) {
           System.out.println("Name: " + result.getAppliName());
            // Diğer özellikleri de gerektiği gibi yazdırabilirsiniz
           System.out.println("---------------------------------------");
        }
        // Convert the results to JSON and write to response
        Gson gson = new Gson();
        String json = gson.toJson(results);
        response.setContentType("application/json");
        response.getWriter().write(json);
        
    	response.sendRedirect("./muracaatliste.jsp");

    }
}
